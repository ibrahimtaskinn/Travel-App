<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="home_bottom_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/home_button_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/_9sdp</item>
    </style>

    <style name="tab_layout_text_style" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SearchButtonStyle" parent="">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/search_text_color</item>
        <item name="android:gravity">left|center</item>
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="cornerSize">10%</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="strokeColor">@color/tab_layout_color</item>
    </style>

    <style name="GuideCategoriesButtonStyle" parent="">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/guide_button_text_color</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="cornerSize">50%</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="strokeColor">@color/tab_layout_color</item>
    </style>

    <style name="roundImageViewProduct">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">75dp</item>
    </style>

    <style name="DetailAddButtonStyle" parent="">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="textAllCaps">false</item>
        <item name="cornerSize">8%</item>
        <item name="backgroundTint">@color/item_back</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>